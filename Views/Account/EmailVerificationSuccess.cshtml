@{
    ViewData["Title"] = "Email Verification Successful";
}

<link rel="stylesheet" href="~/css/email-verification.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="success-animation">
                            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                        </div>
                    </div>
                    
                    <h2 class="card-title text-success mb-4">Email Verified Successfully!</h2>
                    
                    <div class="alert alert-success border-0">
                        <h5 class="alert-heading">
                            <i class="fas fa-thumbs-up me-2"></i>
                            Congratulations!
                        </h5>
                        <p class="mb-0">
                            Your email address has been successfully verified. Your account is now fully activated and ready to use.
                        </p>
                    </div>

                    @if (TempData["VerificationSuccess"] != null)
                    {
                        <div class="alert alert-info border-0 mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            You can now log in to your account and access all features.
                        </div>
                    }

                    @if (TempData["VerificationMessage"] != null)
                    {
                        <div class="alert alert-info border-0 mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            @TempData["VerificationMessage"]
                        </div>
                    }

                    <div class="mb-4">
                        <h6 class="text-muted">What you can do now:</h6>
                        <ul class="list-unstyled text-start">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Log in to your account
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Access all platform features
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Update your profile settings
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Start using our services
                            </li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Log In to Your Account
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>
                            Go to Homepage
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>