@{
    ViewData["Title"] = "Email Verification Pending";
}

<link rel="stylesheet" href="~/css/email-verification.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="pending-animation">
                            <i class="fas fa-envelope-open-text text-primary" style="font-size: 4rem;"></i>
                        </div>
                    </div>
                    
                    <h2 class="card-title text-primary mb-4">Check Your Email</h2>
                    
                    <div class="alert alert-info border-0">
                        <h5 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>
                            Verification Email Sent!
                        </h5>
                        <p class="mb-0">
                            We've sent a verification link to your email address. Please check your inbox and click the verification link to activate your account.
                        </p>
                    </div>

                    @if (TempData["VerificationEmailSent"] != null)
                    {
                        <div class="alert alert-success border-0 mb-4">
                            <i class="fas fa-check-circle me-2"></i>
                            Registration successful! Verification email has been sent.
                        </div>
                    }

                    @if (TempData["ResendSuccess"] != null)
                    {
                        <div class="alert alert-success border-0 mb-4">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["ResendSuccess"]
                        </div>
                    }

                    @if (TempData["ResendError"] != null)
                    {
                        <div class="alert alert-danger border-0 mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["ResendError"]
                        </div>
                    }

                    @if (TempData["ResendMessage"] != null)
                    {
                        <div class="alert alert-info border-0 mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            @TempData["ResendMessage"]
                        </div>
                    }

                    <div class="mb-4">
                        <h6 class="text-muted">What to do next:</h6>
                        <ul class="list-unstyled text-start">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Check your email inbox (including spam/junk folder)
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Click the verification link in the email
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Return here to log in once verified
                            </li>
                        </ul>
                    </div>

                    <div class="border-top pt-4">
                        <p class="text-muted mb-3">Didn't receive the email?</p>
                        
                        <form method="post" asp-action="ResendVerificationEmail" class="mb-3">
                            <div class="input-group mb-3">
                                <input type="email" name="email" class="form-control" placeholder="Enter your email address" required>
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="fas fa-paper-plane me-1"></i>
                                    Resend Email
                                </button>
                            </div>
                        </form>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Go to Login
                            </a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-outline-secondary">
                                <i class="fas fa-user-plus me-2"></i>
                                Register Different Account
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>