@model WebApplication1.Models.Book
@{
    ViewData["Title"] = "Delete Book";
}

<h2 class="mb-4 text-danger">Delete Book</h2>

<div class="alert alert-warning">
    <h5 class="mb-3">Are you sure you want to delete this book?</h5>
    <div class="border rounded p-3 bg-light">
        <dl class="row mb-0">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Genre</dd>

            <dt class="col-sm-3">Year Published</dt>
            <dd class="col-sm-9">@Model.YearPublished</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </div>
</form>
