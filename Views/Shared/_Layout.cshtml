@using System.Reflection
@{
    var infoVersion = Assembly
        .GetExecutingAssembly()
        .GetCustomAttribute<AssemblyInformationalVersionAttribute>()?
        .InformationalVersion ?? "Version Unknown";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="border-bottom bg-white px-4 py-3 d-flex align-items-center">
        <button id="sidebarToggle" class="btn-toggle" type="button" aria-controls="primarySidebar" aria-expanded="false" aria-label="Open sidebar" title="Open sidebar">☰</button>
        <h4 class="mb-0">WebApplication1</h4>
    </header>

    <div class="layout-wrapper">
        <nav id="primarySidebar" class="sidebar" role="navigation" aria-label="Primary">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"] as string == "Home" && ViewContext.RouteData.Values["action"] as string == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index" title="Home">
                        <span class="icon">🏠</span>
                        <span>Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"] as string == "Home" && ViewContext.RouteData.Values["action"] as string == "Privacy" ? "active" : "")" asp-controller="Home" asp-action="Privacy" title="Privacy">
                        <span class="icon">🔒</span>
                        <span>Privacy</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"] as string == "Contact" && ViewContext.RouteData.Values["action"] as string == "Index" ? "active" : "")" asp-controller="Contact" asp-action="Index" title="Contact Us">
                        <span class="icon">📞</span>
                        <span>Contact Us</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"] as string == "Books" && ViewContext.RouteData.Values["action"] as string == "Index" ? "active" : "")" asp-controller="Books" asp-action="Index" title="Books">
                        <span class="icon">📚</span>
                        <span>Books</span>
                    </a>
                </li>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-item">
                        <a class="nav-link @((ViewContext.RouteData.Values["page"] as string) == "/AuditTrail/Index" ? "active" : "")" asp-page="/AuditTrail/Index" title="Audit Logs">
                            <span class="icon">📝</span>
                            <span>Audit Logs</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="nav-link" title="Logout">
                                <span class="icon">🚪</span>
                                <span>Logout</span>
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"] as string == "Account" && ViewContext.RouteData.Values["action"] as string == "Login" ? "active" : "")" asp-controller="Account" asp-action="Login" title="Login">
                            <span class="icon">🔐</span>
                            <span>Login</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <div class="sidebar-overlay" tabindex="-1" aria-hidden="true"></div>

        <div class="content-area">
            <main role="main" class="pb-3" style="padding-top: 1rem;">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted py-3 px-4 text-center">
        <div><strong>Version @infoVersion</strong></div>
        <div>&copy; 2025 - WebApplication1 - <a asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (TempData["LoginSuccess"] != null)
    {
        <script>
            Swal.fire({
                title: 'Welcome!',
                text: '@System.Net.WebUtility.HtmlEncode(TempData["LoginSuccess"]?.ToString() ?? "")',
                icon: 'success'
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>